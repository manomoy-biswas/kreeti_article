<%= form_for @user do |form| %>
  <div class="page-wrapper">
    <div class="wrapper">
      <div class="card">
        <div class="card-body">
          <h1 class="title text-center"> Sign Up</h1>
          <div class="form-group row">
            <%= form.label :mane, for: "name", class:"col-sm-2 col-form-label"%>
            <div class="col-sm-10">
              <%= form.text_field :name,for: "name", class: "form-control", autofocus: true, autocomplete: "name", placeholder: "Enter name", required: true %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= form.label :email, for: "email", class:"col-sm-2 col-form-label"%>
            <div class="col-sm-10">
              <%= form.email_field :email,for: "email", class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter Email ID", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :mobile_no, for: "Mobile number", class:"col-sm-2 col-form-label"%>
            <div class="col-sm-10">
              <%= form.text_field :mobile, for: "Mobile number", class: "form-control", autofocus: true, autocomplete: "name", placeholder: "Enter name", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :password, for: "password", class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= form.password_field :password, for: "password", class: "form-control", autocomplete: "current-password", placeholder: "Enter Password", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :confirm_password, for: "password", class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= form.password_field :conform_password, for: "confirm_password", class: "form-control", autocomplete: "current-password", placeholder: "Repeat Password", required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <strong><%= form.submit "Sign up", class:"btn btn-primary" %></strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>