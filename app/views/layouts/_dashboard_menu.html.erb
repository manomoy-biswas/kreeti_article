<div class="dashboard-header">
  <h2 class="header-text text-center">DASHBOARD</h2>
</div>
<% if current_user %>
  <div class="create-btn-section">
    <%= link_to  "  Create", new_article_path, class:"fa fa-plus btn btn-primary btn-lg create-btn"%>
  </div>
<% end %>
<div class="row">
  <div class="col-12">
    <%= link_to overview_path, class: "dashboard-link" do%>
      <p class="dashboard-item">
        <i class="fa fa-pie-chart"></i>
        <span class="dashboard-item-text">Overview</span>
      </p>
    <% end %>
  </div>
  <% if current_user.admin %>
    <div class="col-12">
      <%= link_to users_path, class: "dashboard-link" do%>
        <p class="dashboard-item">
        <i class="fa fa-users"></i>
        <span class="dashboard-item-text">Users</span>
      </p>
      <% end %>
    </div>
    <div class="col-12">
      <%= link_to categories_path, class: "dashboard-link" do%>
        <p class="dashboard-item">
          <i class="fa fa-tag"></i>
          <span class="dashboard-item-text">Category</span>
        </p>
      <% end %>
    </div>
  <% end %>
  <div class="col-12">
    <%= link_to articles_path, class: "dashboard-link" do %>
      <p class="dashboard-item"> 
        <i class="fa fa-newspaper-o"></i>
        <span class="dashboard-item-text">Articles</span>
      </p>
    <% end %>
  </div>
  <div class="col-12">
    <%= link_to user_path(current_user.id), class: "dashboard-link" do %>
      <p class="dashboard-item">
        <i class="fa fa-user"></i>
        <span class="dashboard-item-text">Profile</span>
      </p>
    <% end %>
  </div>
</div>

