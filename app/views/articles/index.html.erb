<% if @articles.present?%>
  <%i= 0 %>
  <% @articles.each do |article|%>
    <div class="card-8">
      <div class="row ">
        <div class="col-12 col-sm-12 col-md-11">
          <div class="row">
            <div class="col-12">
              <h3 class="title"><%= article.article_name %></h3>
            </div>
            <div class="col-12">
              <p class="task-description"><%= article.description %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-11">
          <div class="row align-items-center">
            <div class="col-12">
              <%= link_to "", like_path, class: "fa fa-thumbs-up"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<%else%>
  <div class="card-8">
    <div class="row ">
      <div class="col-12">
        <p class="text-center">No Record Found</p>
      </div>
    </div>
  </div>
<% end %>