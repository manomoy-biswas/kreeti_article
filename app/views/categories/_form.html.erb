<%= form_for @category do |form| %>
  <div class="page-wrapper">
    <div class="wrapper">
      <div class="card">
        <div class="card-body">
          <h1 class="title text-center"> Sign Up</h1>
          <div class="form-group row">
            <%= form.label :mane, for: "name", class:"col-sm-2 col-form-label"%>
            <div class="col-sm-10">
              <%= form.text_field :category_name,for: "category name", class: "form-control", autofocus: true, placeholder: "Enter category name", required: true %>
            </div>
          </div>
          
          
          <div class="row">
            <div class="col-12 text-center ">
              <strong><%= form.submit "Sign up", class:"btn btn-primary" %></strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>