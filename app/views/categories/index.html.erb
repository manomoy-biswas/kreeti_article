<div class="page-wrapper">
  <div class="article-wrapper">
    <div class="card card-6">
      <div class="card-body">
        <h1 class="title text-center">Article Category</h1>
        <br />
        <div class="article-list">
          <div class="row no-gutters">
            <div class="col-12">
              <%= render "categories/form" %>
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover table-dark">
            <caption class="text-center"> List of Category</caption>
            <thead>
              <tr class="text-center yellow">
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <%if current_user.admin %>
                  <th scope="col">Delete</th>
                <% end %>
              </tr>
            </thead>
            <% if @categories.present? %>
              <tbody>
                <% @categories.each do |category|%>
                  <tr>
                    <th scope="row"><%= @categories.index(category)+1 %></th>
                    <td><%= category.category_name %></td>
                    <% if current_user.admin %>
                      <td class="text-center">
                        <%= link_to "", category_path(category), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>