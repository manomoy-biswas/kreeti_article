<div class="page-wrapper">
  <div class="article-wrapper">
    <div class="card card-6">
      <div class="card-body">
        <div class="article-list">
          <div class="row">
            <div class="col-12 text-center">
              <%= link_to "Create category", new_category_path, class: "btn btn-primary btn-lg", data: {turbolinks: false, disable_with: "wait..." } %>
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover table-dark">
            <caption class="text-center"> List of Category</caption>
            <thead>
              <tr class="text-center yellow">
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <%if current_user.admin %>
                  <th scope="col">Edit</th>
                  <th scope="col">Delete</th>
                <% end %>
              </tr>
            </thead>
            <% if @categories.present? %>
              <tbody>
                <% @categories.each do |category|%>
                  <tr>
                    <th scope="row"><%= @categories.index(category)+1 %></th>
                    <td><%= category.category_name %></td>
                    <% if current_user.admin %>
                      <td class="text-center">
                        <%= link_to "", edit_category_path(category), class:"fa fa-edit"%>
                      </td>
                      <td class="text-center">
                        <%= link_to "", category_path(category), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
