<% if @articles.present?%>
  <%i= 0 %>
  <% @articles.each do |article|%>
    <div class="card">
      <div class="row ">
        <div class="col-12 col-sm-12 col-md-11">
          <div class="row">
            <div class = "col-12 col-md-4">
              <%= image_tag article.image.url, class: "article-image"%>
            </div>
            <div class="col-12 col-md-7">
              <h3 class="article-title"><%= article.article_name %></h3>
              <p class= "article-description more"><%= article.description %></p>
            </div>
            <div class="col-12 col-md-1">
              <%= link_to "", "", class: "fa fa-thumbs-up"%>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-11">
          <div class="row ">
            <div class="col-4 col-md-12 text-center">
              <%= link_to "", article_path(article.id), class: "fa fa-eye"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<%else%>
  <div class="card-8">
    <div class="row ">
      <div class="col-12">
        <p class="text-center">No Record Found</p>
      </div>
    </div>
  </div>
<% end %>

