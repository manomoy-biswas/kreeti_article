<%= form_for @comment do |form| %>
  <div class="card-body">
    <h1 class="title text-left"> Add comment</h1>
      <div class="form-group row">
        <%= form.label :comment_title, for: "article name", class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= form.text_field :comment_title, for: "comment title", class: "form-control", autofocus: true, placeholder: "Enter comment title", required: true %>
        </div>
      </div>
          
      <div class="form-group row">
        <%= form.label :comment, for: "comment", class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= form.text_area :comment,for: "comment", class: "form-control", autofocus: true, placeholder: "Enter comment" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 text-right">
          <strong><%= form.submit "Create", class:"btn btn-primary" %></strong>
        </div>
      </div>
    </div>
  </div>
<% end %>